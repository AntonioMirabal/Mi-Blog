<script>
    const alert = document.getElementById('alert');

    const isEntrance = localStorage.getItem("entrance");

    if(!isEntrance){
        showAlert("info", "Este es un sitio temporal en lo que consigo para pagar un hosting mas decente :) por lo que todos los blogs se pueden perder en un futuro.", 15);
        localStorage.setItem("entrance",true);
    }
    function showAlert(type = "", msg, seconds = 3){
        alert.style.display = "block";
        alert.innerHTML = msg;
        if(type){
            alert.classList.add(type);
        }
        alert.classList.add('active');
        setTimeout(()=>{
            alert.classList.remove('active');
            if(type){
                alert.classList.remove(type);
            }
            setTimeout(()=>{
                alert.style.display = "none";
            },1200 * seconds);
        },1000 * seconds);
    }
</script>
